<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<web-app>
    <filter>
        <filter-name>BackServletFilter</filter-name>
        <filter-class>daji.filter.BackServletFilter</filter-class>
    </filter>
 
    <filter-mapping>
        <filter-name>BackServletFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>daji.servlet.CategoryServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
</web-app>